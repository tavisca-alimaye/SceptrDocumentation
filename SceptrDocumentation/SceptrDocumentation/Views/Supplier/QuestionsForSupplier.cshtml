@model IEnumerable<SceptrDocumentation.Models.QuestionAnswerMapper>

@{
    ViewBag.Title = "QuestionsForSupplier";
}

<h2>@ViewBag.SupplierName</h2>

<p>
    @Html.ActionLink("Back to Index", "SupplierProduct")
</p>
<table>
    @foreach (var category in @ViewBag.Categories)
    {
        <tr>
            <th>
                Category : @category.Name
            </th>
        </tr>

        foreach (var item in Model)
        {
            if(item.Question.Verb.Name ==  @category.Name)
            {
                <td>
                    @item.Question.QuestionText
                    <br>
                    @Html.TextBox("AnswerTextBox"+item.Question.QuestionText, item.Answer, new { enabled = "enabled"})
                    @Html.ActionLink("Submit", "SubmitNewAnswerForQuestion")
                </td>
            }
        }
    }

</table>
